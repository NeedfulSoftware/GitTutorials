toolsets = vs2017 vs2015 vs2013;

vs2017.solutionfile = ../VC15/GitRepositoryInit1.sln;
vs2015.solutionfile = ../VC14/GitRepositoryInit1.sln;
vs2013.solutionfile = ../VC12/GitRepositoryInit1.sln;

setting LIBGIT2_ROOT
{
    help = "Path to the libgit2 installation";
    default = '$(LIBGIT2)';
}

program GitRepositoryInit1
{
    includedirs += $(LIBGIT2_ROOT)/include;
    libdirs += $(LIBGIT2_ROOT)/build/$(config);
    libs += git2;

    sources
    {
        ../../Source/main.cpp
    }
}
